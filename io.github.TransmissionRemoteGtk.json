{
    "id": "io.github.TransmissionRemoteGtk",
    "runtime": "org.freedesktop.Platform",
    "sdk": "org.freedesktop.Sdk",
    "runtime-version": "25.08",
    "rename-icon": "transmission-remote-gtk",
    "copy-icon": true,
    "command": "transmission-remote-gtk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",

        "--share=network",
        "--socket=pulseaudio",

        "--filesystem=xdg-download",

        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "transmission-remote-gtk",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/transmission-remote-gtk/transmission-remote-gtk/releases/download/1.7.0/transmission-remote-gtk-1.7.0.tar.xz",
                    "sha256": "53eacd2029aa5d312d97260f5a0d1f271a371673bf55a48664276f993e13086e",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/transmission-remote-gtk/transmission-remote-gtk/releases/latest",
                        "tag-query": ".tag_name",
                        "version-query": "$tag | sub(\"^transmission-remote-gtk-\"; \"\")",
                        "url-query": ".assets[] | select(.name==\"transmission-remote-gtk-\" + $version + \".tar.xz\") | .browser_download_url",
                        "timestamp-query": ".published_at"
                    }
                },
                {
                    "type": "patch",
                    "path": "patches/transmission-appdata.patch"
                }
            ]
        }
    ]
}
