{
    "id": "io.github.TransmissionRemoteGtk",
    "runtime": "org.gnome.Platform",
    "sdk": "org.gnome.Sdk",
    "runtime-version": "47",
    "rename-icon": "transmission-remote-gtk",
    "copy-icon": true,
    "command": "transmission-remote-gtk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",

        "--share=network",
