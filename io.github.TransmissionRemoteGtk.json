{
    "id": "io.github.TransmissionRemoteGtk",
    "runtime": "org.gnome.Platform",
    "sdk": "org.gnome.Sdk",
    "runtime-version": "42",
    "rename-icon": "transmission-remote-gtk",
    "copy-icon": true,
    "command": "transmission-remote-gtk",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",

        "--share=network",
        "--socket=pulseaudio",

        "--filesystem=xdg-download",

        "--filesystem=xdg-run/gvfsd",
        "--talk-name=org.gtk.vfs.*"
    ],
    "modules": [
        {
            "name": "transmission-remote-gtk",
            "buildsystem": "meson",
            "post-install": [
                "mv /app/share/metadata /app/share/metainfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/transmission-remote-gtk/transmission-remote-gtk/releases/download/1.5.0/transmission-remote-gtk-1.5.0.tar.xz",
                    "sha256": "51d29951fa79ad721c03bf4abd31c4579a29e5c12737ffbbbe4abde9f2fff6d5"
                }
            ]
        }
    ]
}
